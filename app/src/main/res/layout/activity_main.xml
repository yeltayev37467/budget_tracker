<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Profile Name"
        android:contentDescription="Input field to enter a new profile name" />

    <Button
        android:id="@+id/createProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create Profile"
        android:contentDescription="Button to create a new profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Existing Profiles"
        android:textSize="18sp"
        android:textStyle="bold"
        android:contentDescription="Heading for the list of profiles" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:contentDescription="List of existing profiles. Use buttons below to enter a profile.">

        <LinearLayout
            android:id="@+id/existingProfilesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</LinearLayout>

